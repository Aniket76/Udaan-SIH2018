<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Udate_profile_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_til6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/update_profile_txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Example"
                android:textColor="#9e9e9e"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/update_profile_msg_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/josefinsans_semibold"
                android:lineSpacingExtra="5dp"
                android:text="Message"
                android:textSize="16sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/update_profile_checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Education"
                android:textSize="20sp"
                android:fontFamily="@font/josefinsans_semibold"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/update_profile_checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Technology"
                android:textSize="20sp"
                android:fontFamily="@font/josefinsans_semibold"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/update_profile_checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Sports"
                android:textSize="20sp"
                android:fontFamily="@font/josefinsans_semibold"
                android:visibility="gone"/>


            <Button
                android:id="@+id/update_profile_btn1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/josefinsans_semibold"
                android:text="Change Image"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
